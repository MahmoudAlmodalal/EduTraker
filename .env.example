# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
DB_NAME=edutraker_db
DB_USER=root
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=3306
DB_SSL=False
DB_CA_PATH=/etc/ssl/certs/ca-certificates.crt
DB_CONNECT_TIMEOUT=10
# TiDB Cloud example:
# DB_HOST=gateway01.<region>.prod.aws.tidbcloud.com
# DB_PORT=4000
# DB_SSL=True
# Important: add your machine public IP to TiDB Cloud "Allowed IP Addresses",
# otherwise connections to port 4000 will time out.
# Optional: switch base image registry for docker builds (example: public.ecr.aws/docker/library/python:3.10-slim)
PYTHON_BASE_IMAGE=python:3.10-slim
# If True, backend exits when DB is unreachable at startup.
REQUIRE_DB_ON_STARTUP=False
# Seconds used by entrypoint nc check.
DB_CHECK_TIMEOUT_SECONDS=10

# CORS Settings
FRONTEND_URL=http://localhost:5173

# Email Settings
# For development, emails are printed to console by default
# For production, configure SMTP settings below
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=EduTraker <noreply@edutraker.com>

# Password Reset
PASSWORD_RESET_TIMEOUT=3600

# Celery Settings (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=True
