{
    "tech_stack": [
        "Python",
        "Django",
        "Django REST Framework",
        "MySQL",
        "JWT Authentication"
    ],
    "features": [
        {
            "name": "Authentication",
            "description": "JWT-based authentication with portal and workstream login/registration",
            "files": [
                "accounts/views/portal_views.py",
                "workstream/views/workstream_views.py"
            ],
            "api_doc": {
                "/api/auth/token/refresh/": {
                    "post": "Refresh JWT access token"
                },
                "/api/portal/auth/login/": {
                    "post": "Portal user login. Returns nested 'tokens' object with 'access' and 'refresh'."
                },
                "/api/portal/auth/register/": {
                    "post": "Portal user registration. Requires 'password_confirm' field matching 'password'."
                },
                "/api/workstream/{workstream_id}/auth/login/": {
                    "post": "Workstream user login. Returns nested 'tokens' object."
                },
                "/api/workstream/{workstream_id}/auth/register/": {
                    "post": "Workstream user registration. Requires 'password_confirm'."
                }
            }
        },
        {
            "name": "User Management",
            "description": "CRUD operations for users with role-based access",
            "files": [
                "accounts/views/user_views.py",
                "accounts/services/user_services.py"
            ],
            "api_doc": {
                "/api/users/": {
                    "get": "List all users"
                },
                "/api/users/{user_id}/": {
                    "get": "Retrieve user",
                    "patch": "Update user",
                    "delete": "Delete user"
                },
                "/api/users/create/": {
                    "post": "Create new user. Required: email, full_name, password, role (choices: student, teacher, secretary, manager_school, manager_workstream, guardian, admin, guest). Optional: work_stream (int), school (int), profile_data (dict)."
                },
                "/api/users/{user_id}/activate/": {
                    "post": "Activate user"
                },
                "/api/users/{user_id}/deactivate/": {
                    "post": "Deactivate user"
                }
            }
        },
        {
            "name": "Workstream Management",
            "description": "CRUD operations for workstreams",
            "files": [
                "workstream/views/workstream_views.py",
                "workstream/services/workstream_services.py"
            ],
            "api_doc": {
                "/api/workstream/": {
                    "get": "List workstreams",
                    "post": "Create workstream. Required: name, manager_id, max_user."
                },
                "/api/workstreams/{workstream_id}/": {
                    "get": "Get workstream details"
                },
                "/api/workstreams/{workstream_id}/update/": {
                    "patch": "Update workstream"
                },
                "/api/workstreams/{workstream_id}/deactivate/": {
                    "post": "Deactivate workstream"
