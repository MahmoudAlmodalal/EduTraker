{
    "tech_stack": [
        "Python 3.x",
        "Django 5.x",
        "Django REST Framework",
        "SimpleJWT",
        "PostgreSQL/SQLite",
        "drf-spectacular"
    ],
    "auth_config": {
        "authentication_type": "JWT Bearer Token",
        "access_token_lifetime": "1 hour",
        "refresh_token_lifetime": "7 days",
        "header_format": "Authorization: Bearer <token>",
        "username_field": "email",
        "admin_credentials": {
            "email": "admin@test.com",
            "password": "test1234"
        }
    },
    "roles": [
        "student",
        "teacher",
        "secretary",
        "manager_school",
        "manager_workstream",
        "guardian",
        "admin",
        "guest"
    ],
    "features": [
        {
            "name": "Portal Registration",
            "description": "Register as Guest. Fields: email, full_name, password, password_confirm.",
            "files": [
                "accounts/views/portal_views.py"
            ],
            "api_doc": {
                "path": "/api/portal/auth/register/",
                "method": "POST",
                "request_body": {
                    "email": "string",
                    "full_name": "string",
                    "password": "string",
                    "password_confirm": "string"
                },
                "responses": {
                    "201": {
                        "message": "string",
                        "user": "object"
                    },
                    "400": {
                        "detail": "string"
                    }
                }
            }
        },
        {
            "name": "Portal Login",
            "description": "Login for Portal roles (Admin, Manager Workstream). Returns NESTED tokens.",
            "files": [
                "accounts/views/portal_views.py"
            ],
            "api_doc": {
                "path": "/api/portal/auth/login/",
                "method": "POST",
                "responses": {
                    "200": {
                        "user": "object",
                        "tokens": {
                            "access": "string (JWT)",
                            "refresh": "string (JWT)"
                        }
                    },
                    "403": {
                        "detail": "string"
                    }
                }
            }
        },
        {
            "name": "Workstream Registration",
            "description": "Register as Student in workstream. Path param: int workstream_id.",
            "files": [
                "accounts/views/workstream_portal_views.py"
            ],
            "api_doc": {
                "path": "/api/workstream/{workstream_id}/auth/register/",
                "method": "POST",
                "responses": {
                    "201": {
                        "message": "string",
                        "user": "object"
                    },
                    "404": {
                        "detail": "Workstream not found."
                    }
                }
            }
        },
        {
            "name": "Workstream Login",
            "description": "Login for Workstream users. Path param: int workstream_id. Returns NESTED tokens.",
            "files": [
                "accounts/views/workstream_portal_views.py"
            ],
            "api_doc": {
                "path": "/api/workstream/{workstream_id}/auth/login/",
                "method": "POST",
                "responses": {
                    "200": {
                        "user": "object",
                        "tokens": {
                            "access": "string (JWT)",
                            "refresh": "string (JWT)"
                        }
                    }
                }
            }
        },
        {
            "name": "User Management",
            "description": "RBAC management. User IDs are integers.",
            "files": [
                "accounts/views/user_views.py"
            ],
            "api_doc": {
                "endpoints": [
                    {
                        "path": "/api/users/",
                        "method": "GET",
                        "desc": "List users"
                    },
                    {
                        "path": "/api/users/create/",
                        "method": "POST",
                        "desc": "Create user"
                    },
                    {
                        "path": "/api/users/{id}/",
                        "method": "GET",
                        "desc": "Get detail (404: User not found.)"
                    },
                    {
                        "path": "/api/users/{id}/",
                        "method": "PATCH",
                        "desc": "Update (204 No Content)"
                    },
                    {
                        "path": "/api/users/{id}/deactivate/",
                        "method": "POST",
                        "desc": "Deactivate (204 No Content, no body)"
                    },
                    {
                        "path": "/api/users/{id}/activate/",
                        "method": "POST",
                        "desc": "Activate (204 No Content, no body)"
                    }
                ]
            }
        }
    ],
    "multi_tenancy": {
        "isolation": "Users are isolated by work_stream_id or school_id. Endpoints expect INTEGER IDs in paths."
    }
}