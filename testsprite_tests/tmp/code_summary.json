{
  "tech_stack": [
    "Python",
    "Django",
    "Django REST Framework",
    "PostgreSQL",
    "drf-spectacular"
  ],
  "features": [
    {
      "name": "Workstream Info",
      "description": "Public endpoint to get basic workstream info (id and name only). Used on the login page.",
      "files": [
        "workstream/views/workstream_views.py",
        "workstream/urls.py",
        "workstream/models.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/workstreams/{workstream_id}/info/": {
            "get": {
              "operationId": "workstream_info",
              "summary": "Get public workstream info",
              "tags": [
                "Workstream"
              ],
              "parameters": [
                {
                  "name": "workstream_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Successful response",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "name": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "404": {
                  "description": "Workstream not found"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Workstream List",
      "description": "List all workstreams. SuperAdmin only. Supports filtering by search term and active status.",
      "files": [
        "workstream/views/workstream_views.py",
        "workstream/urls.py",
        "workstream/selectors/workstream_selectors.py",
        "workstream/serializers.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/workstream/": {
            "get": {
              "operationId": "workstream_list",
              "summary": "List all workstreams",
              "tags": [
                "Workstream"
              ],
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "parameters": [
                {
                  "name": "search",
                  "in": "query",
                  "schema": {
                    "type": "string"
                  }
                },
                {
                  "name": "is_active",
                  "in": "query",
                  "schema": {
                    "type": "boolean"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "List of workstreams",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "name": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "manager_id": {
                              "type": "integer"
                            },
                            "max_user": {
                              "type": "integer"
                            },
                            "is_active": {
                              "type": "boolean"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "401": {
                  "description": "Unauthorized"
                },
                "403": {
                  "description": "Forbidden - SuperAdmin only"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Workstream Create",
      "description": "Create a new workstream. SuperAdmin only.",
      "files": [
        "workstream/views/workstream_views.py",
        "workstream/urls.py",
        "workstream/services/workstream_services.py",
        "workstream/serializers.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/workstream/": {
            "post": {
              "operationId": "workstream_create",
              "summary": "Create a new workstream",
              "tags": [
                "Workstream"
              ],
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "required": [
                        "name",
                        "manager_id",
                        "max_user"
                      ],
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "manager_id": {
                          "type": "integer"
                        },
                        "max_user": {
                          "type": "integer",
                          "minimum": 1
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Workstream created successfully"
                },
                "400": {
                  "description": "Validation error"
                },
                "401": {
                  "description": "Unauthorized"
                },
                "403": {
                  "description": "Forbidden - SuperAdmin only"
                },
                "404": {
                  "description": "Manager not found"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Workstream Update",
      "description": "Update an existing workstream by ID. SuperAdmin only. All fields are optional.",
      "files": [
        "workstream/views/workstream_views.py",
        "workstream/urls.py",
        "workstream/services/workstream_services.py",
        "workstream/serializers.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/workstreams/{workstream_id}/update/": {
            "put": {
              "operationId": "workstream_update",
              "summary": "Update a workstream",
              "tags": [
                "Workstream"
              ],
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "parameters": [
                {
                  "name": "workstream_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "manager_id": {
                          "type": "integer"
                        },
                        "max_user": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "is_active": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Workstream updated successfully"
                },
                "400": {
                  "description": "Validation error"
                },
                "401": {
                  "description": "Unauthorized"
                },
                "403": {
                  "description": "Forbidden - SuperAdmin only"
                },
                "404": {
                  "description": "Workstream not found"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Workstream Deactivate",
      "description": "Deactivate an existing workstream by ID. SuperAdmin only. This does not delete the workstream, only sets it as inactive.",
      "files": [
        "workstream/views/workstream_views.py",
        "workstream/urls.py",
        "workstream/services/workstream_services.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/workstreams/{workstream_id}/deactivate/": {
            "post": {
              "operationId": "workstream_deactivate",
              "summary": "Deactivate a workstream",
              "tags": [
                "Workstream"
              ],
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "parameters": [
                {
                  "name": "workstream_id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Workstream deactivated successfully",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "401": {
                  "description": "Unauthorized"
                },
                "403": {
                  "description": "Forbidden - SuperAdmin only"
                },
                "404": {
                  "description": "Workstream not found"
                }
              }
            }
          }
        }
      }
    }
  ]
}